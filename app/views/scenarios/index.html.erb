<h3>Manage scenarios</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Scenarios</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <%= @scenarios.each do |s| %>
        <tr class="table-secondary">
            <th scope="row"><%= s.scenario_name %></th>
            <td><%= s.scenario_description %></td>
            <td><%= link_to 'edit', edit_scenario_path(s), class: "scenario-edit" %> | 
            <%= link_to 'delete', scenario_path(s), class: "scenario-delete", data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="column">
            <%= button_to "Add scenario", new_scenario_path(@scenario), method: :get, class: "btn btn-primary" %>
        </div>
    </div>
</div>
