<h3>Manage tests</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Tests</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <%= @tests.each do |t| %>
        <tr class="table-secondary">
            <th scope="row"><%= link_to (t.test_customer + " - " + t.test_scenario), t, class: "test-link" %></th>
            <td><%= link_to 'edit', edit_test_path(t), class: "test-edit" %> | 
            <%= link_to 'delete', test_path(t), class: "test-delete", data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="column">
            <%= button_to "Add test", new_test_path(@test), method: :get, class: "btn btn-primary" %>
        </div>
    </div>
</div>

