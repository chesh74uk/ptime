<h3>Manage customers</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Customers</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <%= @customers.each do |c| %>
        <tr class="table-secondary">
            <th scope="row"><%= c.customer_name %></th>
            <td><%= link_to 'edit', edit_customer_path(c), class: "customer-edit" %> | 
            <%= link_to 'delete', customer_path(c), class: "customer-delete", data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="column">
            <%= button_to "Add customer", new_customer_path(@customer), method: :get, class: "btn btn-primary" %>
        </div>
    </div>
</div>